{
	"name": "turahe/laravel-likeable",
	"description": "Trait for Laravel Eloquent models to allow easy implementation of a 'like' or 'favorite' or 'remember' feature.",
	"license": "MIT",
	"type": "library",
	"keywords": [
		"trait",
		"laravel",
		"eloquent",
		"likeable",
		"likable",
		"like",
		"remember",
		"follow",
		"favorite",
		"favourite"
	],
	"authors": [
		{
			"name": "Nur Wachid",
			"email": "wachid@outlook.com",
			"homepage": "https://turahe.id",
			"role": "Developer"
		}
	],
	"homepage": "https://github.com/turahe/laravel-likeable",
	"require": {
		"php": "^8.1",
		"illuminate/database": "^10.0 || ^11.0 || ^12.0",
		"illuminate/support": "^10.0 || ^11.0 || ^12.0"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^3.0",
		"larastan/larastan": "^2.0 || ^3.0",
		"laravel/pint": "^1.18",
		"mockery/mockery": "^1.6",
		"orchestra/testbench": "^8.0 || ^9.0 || ^10.0",
		"phpunit/phpunit": "^10.0 || ^11.0"
	},
	"minimum-stability": "stable",
	"prefer-stable": true,
	"autoload": {
		"psr-4": {
			"Turahe\\Likeable\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Turahe\\Tests\\Likeable\\": "tests/"
		}
	},
	"config": {
		"optimize-autoloader": true,
		"sort-packages": true
	},
	"extra": {
		"laravel": {
			"providers": [
				"Turahe\\Likeable\\LikeableServiceProvider"
			]
		}
	},
	"scripts": {
		"analyse": "./vendor/bin/phpstan analyse",
		"check": [
			"@lint",
			"@analyse",
			"@test"
		],
		"format": "./vendor/bin/pint",
		"lint": "./vendor/bin/php-cs-fixer fix --dry-run --diff",
		"test": "./vendor/bin/phpunit --testdox",
		"test:coverage": "./vendor/bin/phpunit --coverage-html=coverage-html --coverage-clover=coverage.xml"
	}
}
